
# Welcome to Sonic Pi

use_synth :saw
use_bpm 85
live_loop :strange do
  play:c4
  sleep 0.5
  play:e4
  sleep 0.5
  play:g4
  sleep 0.5
  play:b4
  sleep 0.5
  play:c5
  sleep 0.5
  play:b4
  sleep 0.5
  play:g4
  sleep 0.5
  play:e4
  sleep 0.5
  
end

live_loop :heart do
  sample :drum_bass_hard
  sleep 0.25
  sample :drum_bass_hard
  sleep 0.75
end


live_loop :sound, delay: 4 do
  use_synth :saw
  play :c3
  sleep 6
  play :d3
  sleep 2
  play :e3
  sleep 8
end
